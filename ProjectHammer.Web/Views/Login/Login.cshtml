@model ProjectHammer.Service.Models.LoginPoco

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Login" asp-antiforgery="true" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginUserName" class="control-label"></label>
                <input asp-for="LoginUserName" class="form-control" />
                <span asp-validation-for="LoginUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginPassword" class="control-label"></label>
                <input asp-for="LoginPassword" class="form-control" type="password" />
                <span asp-validation-for="LoginPassword" class="text-danger"></span>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
           
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
